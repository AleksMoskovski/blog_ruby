<%= form_for([@post, @post.comments.build]) do |c|%>
		
	<div class="input-group">
		<span class="input-group-addon" id="sizing-addon2">
			<%= c.label :name  %> 
		</span>
		
		<%= c.text_field :name ,:class => "form-control",  placeholder: "Name" %>
	</div>
			
	<div class="input-group">
		<span class="input-group-addon" id="sizing-addon2">
			<%= c.label :body  %>
		</span>	
		
		<%= c.text_area :body,:class => "form-control",  placeholder: "Body", rows:  "3" %>
	</div>
	<div class="submit-button">
		<%= c.submit nil, :class => "btn btn-info" %>
	</div>
<% end %>