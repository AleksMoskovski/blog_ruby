<%= form_for @project  do |p| %>
	
	<% if @project.errors.any? %>
    	<div id="error_explanation">
      		<h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
			<ul>
      			<% @project.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      			<% end %>
      		</ul>
    	</div>
    <% end %>
	<div class="input-group">
		<span class="input-group-addon" id="sizing-addon2">
			<%=p.label :title  %> 
		</span>
		
		<%= p.text_field :title ,:class => "form-control",  placeholder: "Title" %>
	</div>
			
	<div class="input-group">
		<span class="input-group-addon" id="sizing-addon2">
			<%= p.label :description  %>
		</span>	
		
		<%= p.text_area :description,:class => "form-control",  placeholder: "Description", rows:  "5" %>
	</div>

	<div class="input-group">
		<span class="input-group-addon" id="sizing-addon2">
			<%=p.label :link  %> 
		</span>
		
		<%= p.text_field :link ,:class => "form-control",  placeholder: "Link" %>
	</div>
	<div class="submit-button">
		<%= p.submit nil, :class => "btn btn-info" %>
		<%= link_to "Back", projects_path, :class => "btn btn-warning" %>
	</div>
<% end %>