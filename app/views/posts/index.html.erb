<div class="row">
  <div class="col-md-8 col-md-offset-2">
	<div class="panel panel-default">		
		<div class="panel-heading">
		<label>All Posts</label>
		<%= link_to "New Post", new_post_path , :class => "btn btn-success"%>
		</div>	
		<table class="table">
			<tr>
			    <th>Title</th>
			    <th>Content</th>
			     <th>Created</th>
			</tr>
		  	<%  @posts.each do |p| %>
			  <tr>
			  	<td><%= p.title %> </td>
			    <td><%= p.content.first(25) %>...</td> 
			    <td><%= p.created_at.strftime('%A, %B, %d') %></td> 
			    <td><%= link_to 'Show', post_path(p), :class => "btn btn-info" %></td> 
			    <td><%= link_to 'Edit', edit_post_path(p), :class => "btn btn-warning"%></td> 
			    <td><%= link_to 'Delete', post_path(p),
			    										 method: :delete,
			    									     :class => "btn btn-danger"%></td> 
			  </tr>
		   	<% end %>
		</table>
		</div>
	</div>
</div>